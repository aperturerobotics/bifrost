{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {},
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "remove",
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "vendor",
    "dist"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": true
  }
}
